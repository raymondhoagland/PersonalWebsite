{
    "builders": [
        {
            "type": "docker",
            "image": "rjh/serf_base",
            "commit": true,
            "pull": false
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "../web_server/",
            "destination": "/tmp/"
        },
        {
            "type": "ansible-local",
            "playbook_file": "../playbook_file/npm.yaml"
        },
        {
            "type": "ansible-local",
            "playbook_file": "../playbooks/react.yaml"
        },
        {
            "type": "ansible-local",
            "playbook_file": "../playbooks/express.yaml"
        }
    ],
    "post-processors": [
        {
            "type": "docker-tag",
            "repository": "rjh/web_server",
            "tag": "latest"
        }
    ]
}
