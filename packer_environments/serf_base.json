{
    "builders": [
        {
            "type": "docker",
            "image": "ubuntu",
            "commit": true
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "../shell_scripts/ansible_setup.sh"
        },
        {
            "type": "ansible-local",
            "playbook_file": "../playbooks/serf.yaml"
        }
    ],
    "post-processors": [
        {
            "type": "docker-tag",
            "repository": "rjh/serf_base",
            "tag": "0.1"
        }
    ]
}
